                    </td>
					<td></td>
				</tr>
				<tr>
					<td></td>
					<td align="center" class="container" bgcolor="#FFFFFF">
						<div class="content">
							<table>
								<tbody>
									<tr>
										<td align="left">
                                            {% autoescape %}
                                                {{ contenu_mail|raw }} {# var won't be escaped #}
                                            {% endautoescape %}
											<br><br>
										</td>
									</tr>
								</tbody>
							</table>
						</div>
					</td>
					<td></td>
				</tr>
			</tbody>
		</table>
	</body>
</html>
