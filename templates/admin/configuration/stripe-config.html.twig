{% extends 'admin/easy_admin/main.html.twig' %}

{% block main %}
    <div class="content animate-panel">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2" style="">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Configurations
                </div>
                <div class="panel-body" style="display: block;">
                <form method="post" class="form-horizontal" path="{{('stripe_config')}}">
                <div class="form-group"><label class="col-sm-3 control-label">AZ Stripe ID</label>
                    <div class="col-sm-9"><input type="text" class="form-control" value="{{id}}" name="data[id]"></div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group"><label class="col-sm-3 control-label">AZ Stripe Secret</label>
                    <div class="col-sm-9"><input type="text" class="form-control" value="{{secret}}" name="data[secret]"></div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group"><label class="col-sm-3 control-label">AZ commission</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <input type="text" class="form-control" value="{{commission}}" name="data[commission]" placeholder="%">
                            <span class="input-group-addon">%</span>
                        </div>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group"><label class="col-sm-3 control-label">AZ Admin email</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-addon">@</span>
                            <input type="email" class="form-control" value="{{admail}}" name="data[admail]" required>
                        </div>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group"><label class="col-sm-3 control-label">Rayon restaurant</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <input type="text" class="form-control" value="{{rayon_resto}}" name="data[rayon_restaurant]" placeholder="en KM">
                            <span class="input-group-addon">KM</span>
                        </div>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Rayon livreur</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <input type="text" class="form-control" value="{{rayon_liv}}" name="data[rayon_livreur]">
                            <span class="input-group-addon">KM</span>
                        </div>
                        
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Frais de livraison</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <input type="text" class="form-control" value="{{shipping_cost}}" name="data[shipping_cost]">
                            <span class="input-group-addon">&euro;</span>
                        </div>
                        
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-2">
                        {#<button class="btn btn-default" type="submit">Cancel</button>#}
                        <button class="btn btn-primary" type="submit">Sauvegarder</button>
                    </div>
                </div>
                </form>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}
