{% extends 'admin/easy_admin/main.html.twig' %}


{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('fooTable/css/footable.core.min.css') }}">
{% endblock %}

{% block main %}
    <div class="content animate-panel">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-body">
                        <table id="example1" class="footable table table-stripped toggle-arrow-tiny" data-page-size="8" data-filter=#filter>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th data-toogle="true">Nom</th>
                                    <th>Nombre de livraison durant la dernière heure</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if delivers|length %}
                                    {% for d in delivers %}
                                    <tr>
                                        <td>{{d.id}}</td>
                                        <td><a href="{{path('info_deliver', {'id': d.id|base64_encode})}}">{{ d.lastname }} {{ d.firstname }}</a></td>
                                        <td>
                                            {#<ol>
                                                {% for lg in d.ShippingLogs %}
                                                    <li><span class="text-info">{{ lg.makeAt }}</span></li>
                                                {% endfor %}
                                            </ol>#}
                                            <span class="badge badge-info">{{d.ShippingLogs|length}}</span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                    {%else%}
                                        Aucun résultat trouvé
                                {%endif%}
                                
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('fooTable/dist/footable.all.min.js') }}"></script>
    <script>

    $(function () {

        // Initialize Example 1
        $('#example1').footable();


    });

</script>

{% endblock body_javascript %}