{% extends 'admin/index.html.twig' %}

{% block page %}

    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Ajouter un utilisateur
                </div>
                <div class="panel-body">
                    <form method="post" class="form-horizontal" action="{{ path('admin_add_user')}}">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Pseudonyme</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="user[username]" required="true">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Pr√©nom</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="user[firstname]" required="true">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nom</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="user[lastname]" required="true">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" name="user[email]" required="true">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Roles</label>
                            <div class="col-sm-10">
                                <select class="js-source-states-2" multiple="multiple" style="width: 100%" name="user[roles][]">
                                    <option value="ROLE_ADMIN">ADMIN</option>
                                    <option value="ROLE_USER">USER</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mot de passe</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" name="user[password]" required="true">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-sm-2 control-label">confirmation</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" name="user[passwordr]" required="true">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-2">
                                <button class="btn btn-default" type="submit">Annuler</button>
                                <button class="btn btn-primary" type="submit">Sauvegarder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('homer/plugins/select2-3.5.2/select2.min.js') }}"></script>
    <script>
        $(".js-source-states-2").select2();
    </script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('homer/plugins/select2-3.5.2/select2.css') }}" />
    <link rel="stylesheet" href="{{ asset('homer/plugins/select2-bootstrap/select2-bootstrap.css') }}" />
    
{% endblock %}