{% extends 'admin/index.html.twig' %}

{% block page %}
    {% if users|length > 0 %}
        <div class="pull-right">
            <a href="{{path('admin_add_user')}}" class="btn w-xs btn-primary">Nouveau</a>
        </div>
        <div class="hpanel">
            <div class="panel-heading">
                {#<div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    <a class="closebox"><i class="fa fa-times"></i></a>
                </div>#}
                Utilisateurs
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table cellpadding="1" cellspacing="1" class="table table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Roles</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for u in users %}
                                <tr>
                                    <td>{{ u.id }}</td>
                                    <td>{{ u.username }}</td>
                                    <td>{{ u.lastname }}</td>
                                    <td>{{ u.firstname }}</td>
                                    <td>
                                        {% for r in u.roles %}
                                            <span class="label label-default">{{ r }}</span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li><a href="{{ path('admin_upt_users', {'id': u.id})}}">Modifier</a></li>
                                            <li><a href="#">Supprimer</a></li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}

                        </tbody>
                    </table>
                </div>

            </div>
            <div class="panel-footer">
                Table - {{ users|length }} rows
            </div>
        </div>
    {% else %}
        Aucune donnée
        <div class="pull-right">
            <a href="{{path('admin_add_user')}}" class="btn w-xs btn-primary">Nouveau</a>
        </div>
        {% endif %}
    {% endblock %}
